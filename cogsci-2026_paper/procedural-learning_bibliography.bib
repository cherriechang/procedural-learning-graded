@article{byrnes_conceptual_1992,
	title = {The conceptual basis of procedural learning},
	volume = {7},
	issn = {0885-2014},
	url = {https://www.sciencedirect.com/science/article/pii/088520149290013H},
	doi = {10.1016/0885-2014(92)90013-H},
	abstract = {In the present article, two studies explored the proposal that conceptual knowledge facilitates the acquisition of procedures. The first study examined children's learning of integer computations. Seventh graders' conceptual knowledge of integers was assessed prior to computational instruction, and their procedural knowledge (i.e., computational skill) was assessed both before and after instruction. Results showed that prior conceptual knowledge was a good predictor of computational skill at the posttest. In addition, error analyses revealed that 90\% of children's responses could be explained by a small set of rules. In the second study, adults were taught three novel mathematical rules. Conceptual knowledge was again shown to affect procedural learning. These findings are interpreted as supporting the acquisitional account proposed in the present article.},
