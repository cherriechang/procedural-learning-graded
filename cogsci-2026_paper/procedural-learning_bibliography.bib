	keywords = {Declarative memory, Procedural Deficit Hypothesis (PDH), Procedural memory, Specific language impairment (SLI), Working memory},
	pages = {1138--1154},
	file = {Full Text:/Users/cherriechang/Zotero/storage/QXIXDWZV/Lum et al. - 2012 - Working, declarative and procedural memory in specific language impairment.pdf:application/pdf;ScienceDirect Snapshot:/Users/cherriechang/Zotero/storage/9I5E3Y4X/S0010945211001705.html:text/html},
