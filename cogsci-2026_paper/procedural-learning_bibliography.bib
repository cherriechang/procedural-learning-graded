	number = {2},
	urldate = {2025-11-12},
	journal = {Journal of the International Neuropsychological Society},
	author = {Gabriel, Audrey and Maillart, Christelle and Guillaume, Melody and Stefaniak, Nicolas and Meulemans, Thierry},
	month = jan,
	year = {2011},
	pages = {336--343},
	annote = {[TLDR] It is found that children with SLI were able to learn eight-element-long sequences as fast and as accurately as children with normal language on a serial reaction time (SRT) task, and this results suggest thatChildren with SLI do not display global procedural system deficits.},
